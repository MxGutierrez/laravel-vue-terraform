[
  {
    "name": "backend",
    "image": "${BACKEND_IMAGE_PATH}",
    "cpu": 100,
    "memory": 200,
    "essential": true
  },
  {
    "name": "nginx",
    "image": "${NGINX_IMAGE_PATH}",
    "cpu": 30,
    "memory": 100,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 0
      }
    ],
    "dependsOn": [
      {
        "containerName": "backend",
        "condition": "START"
      }
    ],
    "environment": [
        {
          "name": "BACKEND_URL",
          "value": "127.0.0.1"
        }
      ],
    "compatibilities": ["FARGATE"]
  }
]
